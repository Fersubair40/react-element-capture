{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": ["dom", "es6"],
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src", "index.ts"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "**/__tests__/**/*", "src/setupTests.ts"]
}
