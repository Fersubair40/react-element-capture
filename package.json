{
	"name": "@temilayodev/react-element-capture",
	"version": "1.1.0",
	"main": "dist/umd/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/esm/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/umd/index.js",
			"types": "./dist/esm/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Fersubair40/react-element-capture.git"
	},
	"homepage": "https://github.com/Fersubair40/react-element-capture.git#readme",
	"scripts": {
		"build": "yarn clean && yarn build:esm && yarn build:umd && yarn copy-files",
		"build:esm": "tsc -p tsconfig.esm.json",
		"build:umd": "tsc -p tsconfig.umd.json",
		"clean": "rm -rf dist",
		"copy-files": "cp README.md dist/ && cp package.json dist/",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"dependencies": {
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"html2canvas": "^1.4.1",
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"husky": "^9.1.7",
		"jest": "^30.0.5",
		"jest-environment-jsdom": "^30.0.5",
		"semantic-release": "^22.0.12",
		"ts-jest": "^29.4.0",
		"typescript": "^5.0.0"
	},
	"keywords": [
		"receipt",
		"png",
		"download",
		"react",
		"html2canvas"
	],
	"author": "Temilayo Subair <temisubair@icloud.com>",
	"license": "MIT"
}
